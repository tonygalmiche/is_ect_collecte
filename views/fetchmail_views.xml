<?xml version="1.0"?>
<odoo>


        <record id="is_view_email_server_tree" model="ir.ui.view">
            <field name="name">is_view_email_server_tree</field>
            <field name="model">fetchmail.server</field>
            <field name="inherit_id" ref="fetchmail.view_email_server_tree"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="is_secteur"/>
                    <field name="is_user_id"/>
                    <field name="is_mail_template_id"/>
                </field>
            </field>
        </record>


        <record id="is_view_email_server_form" model="ir.ui.view">
            <field name="name">is_view_email_server_form</field>
            <field name="model">fetchmail.server</field>
            <field name="inherit_id" ref="fetchmail.view_email_server_form"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="is_secteur"/>
                    <field name="is_user_id"/>
                    <field name="is_mail_template_id"/>
                </field>
            </field>
        </record>

</odoo>
