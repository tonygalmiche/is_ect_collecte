<?xml version="1.0" encoding="UTF-8"?>

<odoo>
    <template id="is_login_layout" inherit_id="web.login_layout" name="Login Layout">
        <xpath expr="//div[@class='col-md-6 col-md-offset-3 o_database_list']" position="before">
            <!-- Cela permet de désactiver uniquement le lien 'Gestion des bases de données' -->
            <t t-set="disable_database_manager" t-value="1"/>

            <!-- Cela permet de désactiver le lien 'Gestion des bases de données' et le lien 'Propulsé par Odoo' -->
            <t t-set="disable_footer" t-value="1"/>
        </xpath>
    </template>
</odoo>



